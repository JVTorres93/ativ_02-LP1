{
    "tasks": [
        {
            "label": "Build with Make (MinGW)",
            "type": "shell",
            "command": "mingw32-make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila o projeto usando mingw32-make."
        },
        {
            "label": "Run Executable (Keep Terminal Open)",
            "type": "shell",
            "command": "/c/LP1ativ02/ativ_dois.exe", // Verifique este caminho
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "close": false
            },
            "detail": "Executa o programa e mantém o terminal aberto para ver a saída."
        }
    ],
    "version": "2.0.0"
}